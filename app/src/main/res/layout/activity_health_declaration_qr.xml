<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HealthDeclarationQRActivity">

    <include layout="@layout/appbar"
        android:id="@+id/app_bar"/>

    <TextView
        android:id="@+id/health_dec_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='"Present this QR Code to Security Personnel before Entering, Observe Physical Distancing and Wash your hands regularly"'
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/app_bar"
        />

    <ImageView
        android:id="@+id/hd_img_qr"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray"/>

</RelativeLayout>